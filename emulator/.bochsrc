# ---------------------------------------------  
# My boshrc for OS development
# Going for 'simple is better' here
# ---------------------------------------------  

# ---------------------------------------------  
# CPU
# ---------------------------------------------  
cpu: count=1, ips=85000000 #i7 processor (85MIPS)

# ---------------------------------------------  
# RAM
# ---------------------------------------------  
memory: guest=8, host=32

# ---------------------------------------------  
# BIOS
# ---------------------------------------------  
romimage: file=/usr/local/share/bochs/BIOS-bochs-latest
boot: floppy, disk

# ---------------------------------------------  
# FLOPPY DRIVE
# ---------------------------------------------  
floppya: 2_88=../boot/bin/floppy.img, status=inserted

display_library: x, options="gui_debug"
